<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_size_10"
        android:layout_marginRight="@dimen/text_size_10"
        android:layout_marginTop="@dimen/text_size_10"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_16"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/txt_thank_you"
            android:textColor="@color/thankyou_color"
            android:textSize="@dimen/text_size_20" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_10"
            android:src="@mipmap/thankyou" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_16"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/txt_cradit_recharge_succrssfully"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margen_size_5"
            android:layout_marginLeft="@dimen/text_size_10"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginTop="@dimen/margen_size_5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="@dimen/text_size_10"
            android:text="@string/txt_dome_tow"
            android:textAllCaps="false"
            android:textColor="@color/black_tp"
            android:textSize="@dimen/text_size_12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginTop="@dimen/text_size_20"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cradit_rechage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/text_size_20"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_button_appcolor"
                android:fontFamily="sans-serif"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>