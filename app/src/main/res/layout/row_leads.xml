<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_all_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dcf3e1"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_leadtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center|start"
                        android:padding="@dimen/margen_size_5"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center|start|bottom"
                        android:padding="@dimen/margen_size_5"
                        android:text=""
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:drawableLeft="@mipmap/shift_date"
                        android:fontFamily="sans-serif"
                        android:gravity="center|start"
                        android:paddingBottom="@dimen/margen_size_5"
                        android:paddingLeft="3dp"
                        android:paddingRight="@dimen/margen_size_5"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"
                        android:gravity="center|start|bottom"
                        android:padding="2dp"
                        android:text="(Published date)"
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_10" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_pickup_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/from_icon"
                    android:drawablePadding="@dimen/margen_size_5"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:paddingBottom="@dimen/margen_size_5"
                    android:paddingLeft="@dimen/margen_size_5"
                    android:paddingRight="@dimen/margen_size_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/txt_drop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/to_icon"
                    android:drawablePadding="@dimen/margen_size_5"
                    android:fontFamily="sans-serif"
                    android:gravity="center|start"
                    android:paddingBottom="@dimen/margen_size_5"
                    android:paddingLeft="@dimen/margen_size_5"
                    android:paddingRight="@dimen/margen_size_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_htype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:drawableLeft="@mipmap/home_size"
                        android:drawablePadding="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margen_size_5"
                        android:paddingLeft="@dimen/margen_size_5"
                        android:paddingRight="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/txt_pickupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:drawableLeft="@mipmap/shift_date"
                        android:drawablePadding="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margen_size_5"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center|start|bottom"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="(Shifting date)"
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_10" />

                </LinearLayout>
                ;'

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_bike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:drawableLeft="@mipmap/bike"
                        android:drawablePadding="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margen_size_5"
                        android:paddingLeft="@dimen/margen_size_5"
                        android:paddingRight="2dp"
                        android:text="Bike"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:drawableLeft="@mipmap/car"
                        android:drawablePadding="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margen_size_5"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Car"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="@dimen/margen_size_5">

                <LinearLayout
                    android:id="@+id/top_leadtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center|end"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/leadcategory"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/premium"
                        android:drawableTint="@color/black_tp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/leadcategory2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/premium"
                        android:drawableTint="@color/black_tp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/leadcategory3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/premium"
                        android:drawableTint="@color/black_tp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="L"

                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top_leadtype"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_cradit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text=" Credit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="(Credit)"
                        android:textColor="@color/black_tp"
                        android:textSize="@dimen/text_size_10" />


                    <TextView
                        android:id="@+id/txt_maxvendors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:padding="@dimen/margen_size_5"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/txt_buyNow"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/round_button_delete"
                        android:drawableLeft="@mipmap/bid_icon"
                        android:drawablePadding="3dp"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:gravity="center|bottom"
                        android:paddingLeft="3dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingRight="3dp"
                        android:singleLine="true"
                        android:text="BUY NOW  "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitetp" />

        <LinearLayout
            android:id="@+id/layout_contects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#90dba3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/txt_phonecall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".9"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_callphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:src="@mipmap/phone"
                        android:tint="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/txt_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center|start"
                            android:text="9599781000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/txt_call_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center|start"
                            android:text="2 min ago"
                            android:textColor="@color/black_tp"
                            android:textSize="9dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/txt_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/send_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:src="@mipmap/email"
                        android:tint="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/txt_email_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/black"
                            android:fontFamily="sans-serif"
                            android:gravity="center|start"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:text="ankit@gmail.come"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/txt_email_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center|start"
                            android:text="2 min ago"
                            android:textColor="@color/black_tp"
                            android:textSize="9dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/iv_whatsapp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:background="@drawable/whatsapp_bg"
                        android:scaleType="center"
                        android:src="@mipmap/whatsapp" />

                    <ImageView
                        android:id="@+id/iv_msg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:background="@mipmap/circle"
                        android:scaleType="center"
                        android:src="@mipmap/sms" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_drop1_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="@dimen/margen_size_5"
                android:drawableTint="@color/black"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:padding="2dp"
                android:text="Badarput, New Delhi -110044"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>