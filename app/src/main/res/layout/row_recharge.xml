<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp"
    android:background="?attr/selectableItemBackground"
    card_view:cardElevation="5dp">



    <LinearLayout
        android:id="@+id/layout_all_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/box_bg"
        android:gravity="center"

        android:theme="@style/AppTheme.YellowButton"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <RadioGroup
            android:id="@+id/rg_selectedradigroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/text_size_10"
            android:paddingRight="@dimen/text_size_10"
            android:paddingTop="5dp"
            >
            <RadioButton
                android:visibility="gone"
                android:id="@+id/rd_selectplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RadioGroup>



        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/inrcurrancy"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:padding="5dp"
            android:text="1000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />



        <TextView
            android:id="@+id/txt_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/credit_icon_big"
            android:drawablePadding="5dp"
            android:drawableTint="#DAA520"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:text="1000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />



        <TextView
            android:id="@+id/txt_buyNow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/text_size_10"
            android:paddingRight="@dimen/text_size_10"
            android:paddingTop="5dp"
            android:text="10 % off"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

</android.support.v7.widget.CardView>