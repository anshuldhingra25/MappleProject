<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_sign">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


                <ImageView
                    android:id="@+id/signup_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/text_size_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_arrowtop" />


                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/txt_signup"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />
    -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/txt_signup"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20" />


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_20"
                android:layout_marginRight="@dimen/text_size_20"
                android:gravity="center|top"
                android:orientation="vertical">


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#00d5efd4">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="@dimen/text_size_10">

                        <EditText
                            android:id="@+id/et_firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/new_edittext_bg"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                            android:drawableLeft="@mipmap/user_icon"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/txt_name_hint"
                            android:inputType="text|textCapWords"

                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                            android:drawableLeft="@mipmap/user_icon"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/txt_lastname_hint"
                            android:inputType="text|textCapWords"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/email"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/txt_email_address_hint"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_compnyname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/companylogo"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/company_name"
                            android:inputType="text|textCapWords"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/address"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/txt_company_address_hint"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />


                        <EditText
                            android:id="@+id/et_company_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/icon_state"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="@string/txt_company_city"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />


                        <EditText
                            android:id="@+id/et_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/phone"
                            android:drawablePadding="8dp"
                            android:drawableRight="@mipmap/icon_verify"
                            android:gravity="center|start"
                            android:hint="@string/txt_phone_hint"
                            android:inputType="phone"
                            android:maxLength="13"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_phone_noOptional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/phone"
                            android:drawablePadding="8dp"
                            android:drawableRight="@mipmap/icon_verify"
                            android:gravity="center|start"
                            android:hint="@string/txt_phone_secondaryhint"
                            android:inputType="phone"
                            android:maxLength="13"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@mipmap/password_icon"
                                android:drawablePadding="7dp"
                                android:drawableRight="@mipmap/show_passsword"
                                android:gravity="center|start"
                                android:hint="@string/txt_password_hint_length"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white_hint"
                                android:textSize="@dimen/text_size_16" />

                            <RelativeLayout
                                android:id="@+id/rl_passwordchecker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_2dp"
                                android:paddingRight="@dimen/dimen_2dp"
                                android:visibility="gone">

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_centerInParent="true"
                                    android:layout_toLeftOf="@+id/password_strength"
                                    android:indeterminate="false"
                                    android:maxHeight="20dip"
                                    android:minHeight="20dip"
                                    android:progress="0" />

                                <TextView
                                    android:id="@+id/password_strength"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dimen_5dp"
                                    android:text="Weak"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                        </LinearLayout>


                        <EditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/password_icon"
                            android:drawablePadding="8dp"
                            android:drawableRight="@mipmap/show_passsword"
                            android:gravity="center|start"
                            android:hint="@string/txt_passwordconfirm_hint"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <EditText
                            android:id="@+id/et_select_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/icon_state"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:gravity="center|start"
                            android:hint="@string/lead_pickup_city"
                            android:inputType="phone"
                            android:maxLength="30"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/icon_state" />


                            <Spinner
                                android:id="@+id/state_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/spinner_border"
                                android:drawableLeft="@mipmap/icon_state"
                                android:gravity="center|start"
                                android:hint="State"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                                android:id="@+id/searchMultiSpinnerArea"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:dropDownSelector="@mipmap/icon_verify"
                                android:padding="@dimen/dimen_5dp"
                                app:hintText="Select city" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:capitalize="characters"
                            android:drawableLeft="@mipmap/icon_state"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="state"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:drawableLeft="@mipmap/icon_city"
                            android:drawablePadding="8dp"
                            android:gravity="center|start"
                            android:hint="City"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />


                        <EditText
                            android:id="@+id/et_painno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/new_edittext_bg"
                            android:capitalize="characters"
                            android:drawableLeft="@mipmap/icon_pancard"
                            android:drawablePadding="8dp"
                            android:drawableRight="@mipmap/icon_verify"
                            android:gravity="center|start"
                            android:hint="@string/txt_pancard_hint"
                            android:inputType="textCapCharacters"
                            android:padding="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_hint"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start">


                            <CheckBox
                                android:id="@+id/chk_termCondtion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/txt_termcondtions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/txt_termsconditions_hint"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_7dp"
                    android:layout_marginLeft="@dimen/text_size_18"
                    android:layout_marginRight="@dimen/text_size_18"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/round_button_appcolor"
                    android:fontFamily="sans-serif"
                    android:text="@string/txt_continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>